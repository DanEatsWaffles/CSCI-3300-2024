<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity">

    <!-- Fixed Header -->
    <TextView
        android:id="@+id/headerTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Zig Zag"
        android:textSize="54sp"
        android:layout_marginBottom="80dp"
        android:gravity="center"
        android:background="@drawable/rounded_rectangle" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hot"
        android:layout_marginStart="10dp"
        android:textSize="15sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nearest"
        android:layout_marginStart="10dp"
        android:textSize="15sp" />

    <!-- Scrollable content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_weight="2">

        <LinearLayout
            android:layout_weight="0"
            android:id="@+id/messageContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Message Groups -->
            <LinearLayout
                android:layout_weight="1"
                android:id="@+id/messageGroup1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/rounded_posts_shape">

                <GridLayout
                    android:layout_marginStart="0dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:columnCount="3"
                    android:rowCount="2">

                    <TextView
                        android:layout_rowSpan="0"
                        android:layout_columnSpan="1"
                        android:textColor="@color/timeText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:text="1 hour ago" />

                    <ImageView android:layout_rowSpan="0"
                        android:layout_columnSpan="1"
                        android:src="@drawable/common_full_open_on_phone"
                        android:scaleX="1" android:scaleY="1" android:layout_marginLeft="50dp" android:layout_marginBottom="50dp"
                        ></ImageView>

                    <TextView
                        android:layout_rowSpan="1"
                        android:layout_columnSpan="1"
                        android:textColor="@color/timeText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:layout_marginLeft="90dp"
                        android:text="21 hours" />

                    <TextView
                        android:layout_rowSpan="1"
                        android:layout_columnSpan="2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:text="This app is awesome! this app is awesome"
                        android:textSize="20sp" />
                </GridLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:id="@+id/messageGroup2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/rounded_posts_shape">

                <GridLayout
                    android:layout_marginStart="0dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:columnCount="3"
                    android:rowCount="2">

                    <TextView
                        android:layout_rowSpan="0"
                        android:layout_columnSpan="1"
                        android:textColor="@color/timeText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:text="1 hour ago" />

                    <ImageView android:layout_rowSpan="0"
                        android:layout_columnSpan="1"
                        android:src="@drawable/common_full_open_on_phone"
                        android:scaleX="1" android:scaleY="1" android:layout_marginLeft="50dp" android:layout_marginBottom="50dp"
                        ></ImageView>

                    <TextView
                        android:layout_rowSpan="1"
                        android:layout_columnSpan="1"
                        android:textColor="@color/timeText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:layout_marginLeft="90dp"
                        android:text="21 hours" />

                    <TextView
                        android:layout_rowSpan="1"
                        android:layout_columnSpan="2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:text="This app is awesome! this app is awesome"
                        android:textSize="20sp" />
                </GridLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:id="@+id/messageGroup3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/rounded_posts_shape">

                <GridLayout
                    android:layout_marginStart="0dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:columnCount="3"
                    android:rowCount="2">

                    <TextView
                        android:layout_rowSpan="0"
                        android:layout_columnSpan="1"
                        android:textColor="@color/timeText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:text="1 hour ago" />

                    <ImageView android:layout_rowSpan="0"
                        android:layout_columnSpan="1"
                        android:src="@drawable/common_full_open_on_phone"
                        android:scaleX="1" android:scaleY="1" android:layout_marginLeft="50dp" android:layout_marginBottom="50dp"
                        ></ImageView>

                    <TextView
                        android:layout_rowSpan="1"
                        android:layout_columnSpan="1"
                        android:textColor="@color/timeText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:layout_marginLeft="90dp"
                        android:text="21 hours" />

                    <TextView
                        android:layout_rowSpan="1"
                        android:layout_columnSpan="2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:text="This app is awesome! this app is awesome"
                        android:textSize="20sp" />
                </GridLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Post"
        android:layout_margin="20dp"
        android:layout_gravity="end" />

</LinearLayout>
