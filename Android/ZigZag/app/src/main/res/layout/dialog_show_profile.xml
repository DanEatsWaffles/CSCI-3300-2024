<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white">

    <ImageButton
        android:id="@+id/closeButton"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:scaleType="fitXY"
        android:src="@drawable/baseline_arrow_back_24"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Cancel"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="0dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profile"
        android:textSize="40sp"
        android:gravity="center"
        android:layout_gravity="center"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/emailTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "Email:                              "
        android:layout_marginTop="60dp"
        android:textSize="20dp"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/phoneTextView"
        android:layout_width="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:text = "Phone Number:               "
        android:textSize="20dp"
        android:textColor="@color/black"
        />

    <!-- Sign Out Section -->
    <LinearLayout
        android:clickable="true"
        android:focusable="true"
        android:id="@+id/SignOutLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="100dp"
        android:padding="10dp"
        android:background="@color/transparentRed"
        android:gravity="center">

        <ImageView
            android:id="@+id/signOutIcon"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:contentDescription="Sign Out Icon"
            android:scaleType="fitXY"
            android:src="@drawable/baseline_person_24"
            android:layout_marginEnd="8dp" />

        <TextView
            android:id="@+id/signOut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Out"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Delete Account Section -->
    <LinearLayout
        android:clickable="true"
        android:focusable="true"
        android:id="@+id/DeleteAccountLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_marginTop="50dp"
        android:background="@color/invisible"
        android:gravity="center">

        <ImageView
            android:id="@+id/deleteAccountIcon"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:scaleType="fitXY"

            android:src="@drawable/baseline_delete_forever_24"
            android:contentDescription="Delete Account Icon"
            android:layout_marginEnd="8dp" />

        <TextView
            android:id="@+id/deleteAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete Account"
            android:textColor="@color/red"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>


</LinearLayout>
