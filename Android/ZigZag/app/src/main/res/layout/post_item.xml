<!-- post_item.xml -->
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/rounded_post_background"
    android:rowCount="3"
    android:columnCount="2"
    android:layout_marginBottom="10dp"
    >

    <TextView
        android:id="@+id/post_time_ago_text"
        android:layout_column="0"
        android:layout_row="0"
        android:textStyle="bold"
        android:textSize="11sp"
        android:textAllCaps="true"
        android:layout_gravity="center"
        android:textColor="@color/post_secondary_text"
        />

    <ImageButton
        android:id="@+id/post_more_button"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_gravity="end"
        android:background="@color/invisible"
        android:scaleType="fitCenter"
        android:src="@drawable/baseline_more_horiz_24"
        android:tint="@color/post_secondary_text"
        android:contentDescription="@string/more_button_description"
        />


    <TextView
        android:id="@+id/post_content_text"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:textColor="@color/post_primary_text"
        android:textSize="14sp"
        />

    <TextView
        android:id="@+id/post_distance_text"
        android:layout_row="2"
        android:layout_column="1"
        android:layout_gravity="end"
        android:textColor="@color/post_secondary_text"
        android:textStyle="bold"
        />
</GridLayout>
